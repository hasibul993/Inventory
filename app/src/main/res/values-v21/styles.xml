    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:editTextColor">@color/White</item>
        <item name="android:textSize">@dimen/body</item>
        <!--  It should be true otherwise action mode will not overlay toolbar -->
        <item name="windowActionModeOverlay">true</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <!--  For Custom Action Mode Background Color/Drawable -->
        <item name="actionModeBackground">@color/bg_action_mode</item>

    </style>

    <style name="AppTheme.ActionBar.Transparent" parent="AppTheme">
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorPrimary">@color/black_34</item>
    </style>
